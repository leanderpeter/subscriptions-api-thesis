{
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "inlineSources": true,
    "sourceRoot": "/",
    "typeRoots": ["./node_modules/@types"],
    "outDir": ".build"
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".build/**/*",
    ".vscode/**/*",
  ]
}
